@{
    ViewData["Title"] = "Gasolina";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Usa el layout compartido si tienes uno
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<body>
    <div>
        <div class="header bg-white text-dark p-3 mb-3 rounded d-flex align-items-center justify-content-between shadow-sm" style="border: 1px solid #ccc;">
            <p class="mb-0">Hoy es <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong></p>
            <div class="mx-auto" style="width: 80%; text-align: center;">
                <h3 class="mb-0">Galones</h3>
            </div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm" style="border: 1px solid #ccc;">            
            <div class="row d-flex">
                <!-- Priemra Columna -->
                <div class="col-md-6">
                    <!-- Cliente -->
                    <div class="form-group mb-3 d-flex align-items-center">
                        <label for="cliente" class="form-label me-2">Cliente:</label>
                        <select id="cliente-values" name="cliente" class="form-select border border-black" style="max-width:200px;">
                            <!-- Opciones de clientes aquí -->
                        </select>
                        <!-- Botón de voucher -->
                        <div class="voucher-section" style="margin-left: 15px;">
                            <button class="btn-buscar" id="btn-buscar">
                                <i class="fa fa-search me-2"></i>Buscar
                            </button>
                        </div>
                    </div>
                    <div class="row d-flex align-content-center">
                        <div class="col-md-3 text-center" style="width:40%;">
                            <h6>Galones Pagados</h6>
                            <input id="cant-galones-pagados" class="border p-2 bg-light" type="number" value="" readonly style="max-width:100%;" />
                            <input id="valor-galones-pagados" class="border p-2 bg-light" type="number" value="" readonly style="max-width:100%;" />
                        </div>
                        <div class="col-md-1"><h4></h4></div>
                        <div class="col-md-3 text-center" style="width:40%;">
                            <h6>Galones Cargados</h6>
                            <input id="cant-galones-cargados" class="border p-2 bg-light" type="number" value="" readonly style="max-width:100%;" />
                            <input id="valor-galones-cargados" class="border p-2 bg-light" type="number" value="" readonly style="max-width:100%;" />
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group mb-3">
                        <div>
                            <div class="status-box contra"><label>CONTRA</label></div>
                        </div>  
                        <div>
                            <div class="status-box afavor"><label>AFAVOR</label></div>
                        </div>
                        <!-- Indicador contra/afavor -->
                        <div>
                            <div class="text-center" style="margin-top: 6px;">
                                <h6>Galones Deuda</h6>
                                <input id="cant-galones-deuda" class="border p-2 bg-light " type="number" value="0" readonly style="max-width:100%;" />
                                <input id="total-galones-deuda" class="border p-2 bg-light " type="number" value="0" readonly style="max-width:100%;" />                                
                            </div>
                        </div>
                    </div>
                </div>               
                <div class="col-md-4 ">
                    <div class="d-flex">
                        <div class="col-md-6">
                            <label for="precio" class="me-2">Precio:</label>
                            <input type="number" id="precio" value="" class="form-control me-4" style="width: 120px;" />
                        </div>
                        <div class="col-md-6">
                            <label for="monto" class="me-2">Monto:</label>
                            <input type="number" id="monto" value="" class="border p-2 bg-light" style="width: 120px;" readonly />
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="col-md-3">
                            <label for="cantidad" class="me-2">Cantidad:</label>
                            <input type="number" id="cantidad" value="" class="form-control me-4" style="width: 80px;" />
                        </div>
                        <div class="voucher-section " style="max-height: 60px; max-width: 100%; margin-top: 21px;margin-left: 25px;">
                            <button class="btn-buscar" id="btn-agregar-cuenta">
                                <i class="fa fa-plus me-2"></i>
                                Cargar Gasolina
                            </button>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex" style=" margin-top: 10px;">
                        <label for="monto" class="me-2">Comentario:</label>
                        <input type="text" id="comentario" value="" class="form-control me-4" style="width: 186px;" />
                    </div>
                </div>
            </div>

            <!-- Tablas de pagados y cargados -->
            <div class="tables-section">
            <div class="pagados">
                <h3>Pagados</h3>
                <table class="table table-hover" id="table-pagados">
                    <thead>
                        <tr>
                            <th>Precio</th>
                            <th>Galones</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Más filas si es necesario -->
                    </tbody>
                </table>
            </div>

            <div class="cargados">
                <h3>Cargados</h3>
                <table class="table table-hover" id="table-cargados">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Galones</th>
                            <th>Monto E</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Más filas si es necesario -->
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
</body>
<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosGasolina.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesGasolina.js"></script>
