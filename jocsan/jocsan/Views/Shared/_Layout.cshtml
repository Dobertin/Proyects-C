

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jocsan</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <!-- Font Awesome (para íconos) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex vh-100">
    <div class="container-fluid d-flex">
        <div class="sidebar p-3">
            <div class="sidebar-header text-center mb-4">
                <a href="/Home/Index" class="text-decoration-none"><h1 class="">Sistema de Pesca</h1></a>
            </div>
            <ul class="menu list-unstyled">
                <!-- FACTURAS -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#facturasCollapse" aria-expanded="false" aria-controls="facturasCollapse">
                        <i class="fas fa-file-invoice me-2"></i> FACTURAS
                    </h2>
                    <ul id="facturasCollapse" class="collapse ms-4">
                        <li><a href="/Factura/Emitir" class="text-dark">Emitir Factura</a></li>
                        <li><a href="/Factura/BuscarFactura" class="text-dark">Buscar Factura</a></li>
                    </ul>
                </li>
                <!-- CUENTA -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#cuentaCollapse" aria-expanded="false" aria-controls="cuentaCollapse">
                        <i class="fas fa-wallet me-2"></i> CUENTA
                    </h2>
                    <ul id="cuentaCollapse" class="collapse ms-4">
                        <li><a href="/Cuentas/ConsolidadoCuentas" class="text-dark">Cuentas</a></li>
                    </ul>
                </li>
                <!-- CREDITOS -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#creditosCollapse" aria-expanded="false" aria-controls="creditosCollapse">
                        <i class="fas fa-credit-card me-2"></i> CREDITOS
                    </h2>
                    <ul id="creditosCollapse" class="collapse ms-4">
                        <li><a href="/Credito/Creditos" class="text-dark">Añadir Credito</a></li>
                    </ul>
                </li>
                <!-- CLIENTE -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#clienteCollapse" aria-expanded="false" aria-controls="clienteCollapse">
                        <i class="fas fa-user me-2"></i> CLIENTE
                    </h2>
                    <ul id="clienteCollapse" class="collapse ms-4">
                        <li><a href="/Cliente/AniadirCliente" class="text-dark">Añadir Cliente</a></li>
                        <li><a href="/Cliente/ListadoClientes" class="text-dark">Lista de Clientes</a></li>
                    </ul>
                </li>
                <!-- GASOLINA -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#gasolinaCollapse" aria-expanded="false" aria-controls="gasolinaCollapse">
                        <i class="fas fa-gas-pump me-2"></i> GASOLINA
                    </h2>
                    <ul id="gasolinaCollapse" class="collapse ms-4">
                        <li><a href="/Gasolina/Gasolina" class="text-dark">Gasolina</a></li>
                    </ul>
                </li>
                <!-- VUELTOS -->
                <li class="menu-section">
                    <h2 class="d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#vueltosCollapse" aria-expanded="false" aria-controls="vueltosCollapse">
                        <i class="fas fa-exchange-alt me-2"></i> VUELTOS
                    </h2>
                </li>
            </ul>
        </div>

        <!-- Sección de contenido dinámico -->
        <div class="main-content flex-grow-1 p-4 bg-light">
            @RenderBody() <!-- Aquí se renderizará el contenido de las vistas -->
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
