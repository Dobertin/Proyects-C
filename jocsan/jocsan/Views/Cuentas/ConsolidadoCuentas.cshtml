@{
    ViewData["Title"] = "Consolidado de Cuentas";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usamos el layout compartido
}
<body>
    <div>
        <div class="header">
            <p>Hoy es @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <h2>Consolidado de Cuentas</h2>
        </div>

        <section class="client-section">
            <label for="cliente-select">Cliente:</label>
            <select id="cliente-select">
                <option value="CUNGA">CUNGA</option>
            </select>
            <button class="btn-search">BUSCAR CUENTAS</button>
        </section>

        <section class="summary">
            <div class="total-credits">
                <h2>Total Créditos</h2>
                <p>36,175.00 €</p>
            </div>
            <div class="total-abonos">
                <h2>Total Abonos</h2>
                <p>0 €</p>
            </div>
            <div class="debe">
                <h2>DEBE</h2>
                <p>36,175.00 €</p>
            </div>
        </section>

        <section class="last-account">
            <h2>ULTIMA CUENTA</h2>
            <div class="account-details">
                <p><strong>Fecha:</strong> 10/12/2024</p>
                <p><strong>Cliente:</strong> 30Jimmy</p>
                <p><strong>Monto:</strong> 1,337,212 €</p>
                <p>Hasta aquí sin meter la maya de rastra y hilos y mecate 5/16</p>
            </div>
        </section>

        <section class="tables-section">
            <div class="credits">
                <h3>CREDITOS</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Préstamo 1</td>
                            <td>300.00 €</td>
                            <td>10/11/2024</td>
                        </tr>
                        <!-- Más filas según sea necesario -->
                    </tbody>
                </table>
            </div>

            <div class="invoices">
                <h3>FACTURAS</h3>
                <table>
                    <thead>
                        <tr>
                            <th>N° de Factura</th>
                            <th>N° Productos</th>
                            <th>Total</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1233456</td>
                            <td>2 productos</td>
                            <td>17,500 €</td>
                            <td>10/04/2024</td>
                        </tr>
                        <!-- Más filas según sea necesario -->
                    </tbody>
                </table>
            </div>
        </section>

        <section class="duplicate-abonos">
            <h3>ABONOS DUPLICADOS</h3>
            <p>No se encontraron abonos duplicados</p>
        </section>
    </div>
</body>
<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosCuentas.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesCuentas.js"></script>
