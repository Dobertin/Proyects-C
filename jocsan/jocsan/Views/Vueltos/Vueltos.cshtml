@{
    ViewData["Title"] = "Vueltos";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usamos el layout compartido
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.23/jspdf.plugin.autotable.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<body>
    <div>
        <div class="header bg-white text-dark p-3 mb-3 rounded d-flex align-items-center justify-content-between shadow-sm" style="border: 1px solid #ccc;">
            <p class="mb-0">Hoy es <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong></p>
            <div class="mx-auto" style="width: 80%; text-align: center;">
                <h2>Vueltos</h2>
            </div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm" style="border 1px solid #ccc;">
            <div class="row g-3 mb-3">
                <!-- Primera columna: client-section y summary -->
                <div class="col-md-6">
                    <section class="client-section mb-3">
                        <label for="cliente-select" class="mb-0 me-3">Cliente:</label>
                        <select id="cliente-select" class="form-select w-25 border border-dark d-inline-block">
                            <!-- Opciones aquí -->
                        </select>
                        <button id="buscar-vueltos" type="submit" class="btn btn-primary btn-search ms-2">
                            <i class="fa fa-search"></i>
                            <span>Buscar Vueltos</span>
                        </button>
                    </section>                    

                    <section class="summary">  
                        <div class="total-credits mb-2">
                            <h2>Total CARGO</h2>
                            <p id="total-vueltos">0.00</p>
                        </div>
                        <div class="total-abonos mb-2">
                            <h2>Total ABONO</h2>
                            <p id="total-abonos">0.00</p>
                        </div>
                        <div class="discount-row mb-3 d-flex justify-content-start">
                            <div class="justify-content-between align-items-center border border-dark rounded p-2">
                                <label id="texto-deuda" class="form-label mb-0 fw-bold" style="min-width: 102px;">DEBE</label>
                                <p id="deuda-total" class="form-control-plaintext mb-0" style="font-weight: bold; color: green;">0.00</p>
                            </div>
                        </div>
                    </section>
                </div> 
                <div class="col-md-6">
                    <section class="tables-section mb-3 ">
                        <div>
                            <div class="form-group mb-3 d-flex align-items-center">
                                <label for="monto" class="form-label" style="min-width: 120px;">Monto:</label>
                                <input type="number" id="monto" name="monto" value="0" min="0" class="form-control border border-black" />
                            </div>

                            <div class="form-group mb-3 d-flex align-items-center">
                                <label for="descripcion" class="form-label" style="min-width: 120px;">Descripción:</label>
                                <textarea id="descripcion" name="descripcion" class="form-control border border-black" rows="1"></textarea>
                            </div>
                            <div class="form-group mb-3 d-flex align-items-center">
                                <label for="vale-dado" class="form-label mb-0" style="min-width: 120px;">ABONO: </label>
                                <div class="form-check form-switch me-3">
                                    <input class="form-check-input" type="checkbox" id="vale-dado" role="switch">
                                </div>
                            </div>
                            <div class="action-buttons d-flex justify-content-center mt-4 gap-3">
                                <button type="button" class="agregar-btn" id="agregarVueltoBtn">
                                    <i class="fa fa-plus me-2"></i>
                                    <span>Agregar Vuelto</span>
                                </button>
                                <button id="generar-voucher" type="submit" class="btn btn-primary btn-search ms-2 hidden">
                                    <i class="fa-solid fa-download"></i>
                                    <span>Generar Voucher</span>
                                </button>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <section class="tables-section mb-3 ">
                <div class="credits" style="margin-left: 10%;">
                    <h3>Vales o Vueltos</h3>
                    <div class="table-responsive d-flex justify-content-center">
                        <table class="table w-auto " id="table-vuelto">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Monto</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Más filas según sea necesario -->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="credits" style="margin-right: 10%;">
                    <h3>ABONOS</h3>
                    <div class="table-responsive d-flex justify-content-center">
                        <table class="table w-auto " id="table-abono">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Monto</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Más filas según sea necesario -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>

<div id="pdfModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <iframe id="pdfViewer" style="width:100%; height:500px;"></iframe>
    </div>
</div>

<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosVuelto.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesVuelto.js"></script>
