@{
    ViewData["Title"] = "Créditos";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<body>
    <div>
        <div class="header bg-white text-dark p-3 mb-3 rounded d-flex align-items-center justify-content-between shadow-sm" style="border: 1px solid #ccc;">
            <p class="mb-0">Hoy es <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong></p>
            <div class="mx-auto" style="width: 80%; text-align: center;">
                <h3 class="mb-0">Créditos</h3>
            </div>
        </div>
        <div class="bg-white p-4 rounded shadow-sm" style="border: 1px solid #ccc;">
            <div class="row" style="display:flex;">
                <div class="button-row col-4  p-4">
                    <!-- Formulario para buscar y agregar créditos -->
                    <form class="credito-form">
                        <div class="form-group mb-3 d-flex align-items-center">
                            <label for="cliente" class="form-label" style="min-width: 120px;">Cliente:</label>
                            <select id="cliente-values" name="cliente" class="form-select border border-black">
                                <!-- Opciones de clientes aquí -->
                            </select>
                        </div>


                        <div class="form-group mb-3 d-flex align-items-center">
                            <label for="monto" class="form-label" style="min-width: 120px;">Monto:</label>
                            <input type="number" id="monto" name="monto" value="0" min="0" class="form-control border border-black" />
                        </div>

                        <div class="form-group mb-3 d-flex align-items-center">
                            <label for="descripcion" class="form-label" style="min-width: 120px;">Descripción:</label>
                            <textarea id="descripcion" name="descripcion" class="form-control border border-black" rows="3"></textarea>
                        </div>

                        <div class="action-buttons d-flex justify-content-center mt-4 gap-3">
                            <button type="submit" class="buscar-btn">
                                <i class="fa fa-search"></i>
                                <span>Buscar Préstamo</span>
                            </button>
                            <button type="button" class="agregar-btn" id="agregarPrestamoBtn">
                                <i class="fa fa-plus me-2"></i>
                                <span>Agregar Préstamo</span>
                            </button>
                        </div>

                    </form>
                </div>
                <div class="button-row col-8">
                    <!-- Tabla de resultados de créditos -->
                    <table class="table table-hover" id="table-credito">
                        <thead class="bg-white border-bottom">
                            <tr>
                                <th>Descripción</th>
                                <th>Monto</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Puedes agregar más filas de prueba -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

<div id="pdfModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <iframe id="pdfViewer" style="width:100%; height:500px;"></iframe>
    </div>
</div>

<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosCredito.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesCredito.js"></script>
