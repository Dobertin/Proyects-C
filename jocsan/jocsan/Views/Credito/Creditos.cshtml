@{
    ViewData["Title"] = "Créditos";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<body>
    <div>
        <div class="header">
            <p>Hoy es @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <h2>Créditos</h2>
        </div>
        <div class="row" style="display:flex;">
            <div class ="button-row">
                <!-- Formulario para buscar y agregar créditos -->
                <form class="credito-form">
                    <div class="form-group">
                        <label for="cliente">Cliente:</label>
                        <select id="cliente-values" name="cliente">
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="monto">Monto:</label>
                        <input type="number" id="monto" name="monto" value="0" min="0"/>
                    </div>

                    <div class="form-group">
                        <label for="descripcion">Descripción:</label>
                        <input type="text" id="descripcion" name="descripcion" value="" />
                    </div>

                    <div class="action-buttons">
                        <button type="submit" class="buscar-btn">
                            <span>Buscar Préstamo</span>
                        </button>
                        <button type="button" class="agregar-btn" id="agregarPrestamoBtn">
                            <span>Agregar Préstamo</span>
                        </button>
                    </div>
                </form>
            </div>
            <div class="button-row" style="margin-left:100px;">
                <!-- Tabla de resultados de créditos -->
                <table class="credito-table" id="table-credito">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Puedes agregar más filas de prueba -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

<div id="pdfModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <iframe id="pdfViewer" style="width:100%; height:500px;"></iframe>
    </div>
</div>

<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosCredito.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesCredito.js"></script>
