@{
    ViewData["Title"] = "Búsqueda de Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<body>
    <div>
        <div class="header bg-white text-dark p-3 mb-3 rounded d-flex align-items-center justify-content-between shadow-sm" style="border: 1px solid #ccc;">
            <p class="mb-0">Hoy es <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong></p>
            <div class="mx-auto" style="width: 80%; text-align: center;">
                <h3 class="mb-0">Búsqueda de Facturas</h3>
            </div>
        </div>

        <div class="bg-white p-4 rounded shadow-sm" style="border: 1px solid #ccc;">

            <!-- Formulario de búsqueda de facturas -->
            <form class="search-form">
                <div class="row g-3 mb-3">
                    <div class="col-3 d-flex align-items-center">
                        <label for="cliente" class="form-label">Cliente:</label>
                        <select id="cliente-values" class="form-select border border-black">
                        </select>
                    </div>
                  
                    <div class="col-4 d-flex align-items-center">
                        <label for="nro-factura" class="form-label" style="min-width: 130px;">Nro de Factura:</label>
                        <input type="number" id="nro-factura" class="form-control border border-black" name="nro-factura" value="0" min="0" />
                    </div>
                    <div class="col-4 d-flex align-items-center">
                    <button type="submit" class="buscar-btn">
                            <i class="fa fa-search"></i>
                        <span>Buscar Factura</span>
                    </button>
                    </div>
                </div>
                
            </form>

            <!-- Tabla de resultados -->
            <table class="table table-bordered table-hover mt-5" id="table-factura">
                <thead class="thead-dark bg-light">
                    <tr>
                        <th>N° de Factura</th>
                        <th>N° Producto</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Más filas según sea necesario -->
                </tbody>
            </table>


        </div>
    </div>
</body>

<div id="pdfModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <iframe id="pdfViewer" style="width:100%; height:500px;"></iframe>
    </div>
</div>
<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosBuscarFactura.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesBuscarFactura.js"></script>
