@{
    ViewData["Title"] = "Búsqueda de Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<body>
    <div>
        <div class="header">
            <p>Hoy es @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <h2>Búsqueda de Facturas</h2>
        </div>
        <!-- Formulario de búsqueda de facturas -->
        <form class="search-form">
            <label for="cliente">Cliente:</label>
            <select id="cliente-values">
            </select>

            <label for="nro-factura">Nro de Factura:</label>
            <input type="number" id="nro-factura" name="nro-factura" value="0" min="0" />

            <button type="submit" class="buscar-btn">
                <span>Buscar Factura</span>
            </button>
        </form>

        <!-- Tabla de resultados -->
        <table class="factura-table" id="table-factura">
            <thead>
                <tr>
                    <th>N° de Factura</th>
                    <th>N° Producto</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Más filas según sea necesario -->
            </tbody>
        </table>
    </div>
</body>

<div id="pdfModal" class="modal">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <iframe id="pdfViewer" style="width:100%; height:500px;"></iframe>
    </div>
</div>
<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosBuscarFactura.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesBuscarFactura.js"></script>
