@{
    ViewData["Title"] = "Añadir Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usamos el layout compartido
}
<body>
    <div>
        <div class="header">
            <p>Hoy es @DateTime.Now.ToString("dd/MM/yyyy")</p>
            <h2>Añadir Cliente</h2>
        </div>

        <!-- Formulario para añadir cliente -->
        <form class="cliente-form">
            <!-- Nueva embarcación -->
            <div class="form-group">
                <label for="nueva-embarcacion">Nueva Embarcación</label>
                <input type="checkbox" id="nueva-embarcacion" name="nueva-embarcacion" />
            </div>

            <!-- Peones -->
            <div class="peones">
                <div class="form-group">
                    <label for="peon1">PEON 1</label>
                    <input type="checkbox" id="peon1" name="peon1" />
                    <input type="text" id="peon1-nombre" name="peon1-nombre" value="PRIMER PEON" />
                </div>
                <div class="form-group">
                    <label for="peon2">PEON 2</label>
                    <input type="checkbox" id="peon2" name="peon2" />
                    <input type="text" id="peon2-nombre" name="peon2-nombre" value="SEGUNDO PEON" />
                </div>
            </div>

            <!-- Campos de cliente -->
            <div class="form-group">
                <label for="cliente">Cliente:</label>
                <input type="text" id="cliente" name="cliente" value="CLIENTE NUEVO" />
            </div>

            <div class="form-group">
                <label for="capitan">Capitán:</label>
                <input type="text" id="capitan" name="capitan" value="NUEVO" />
            </div>

            <div class="form-group">
                <label for="porcentaje">Porcentaje:</label>
                <input type="text" id="porcentaje" name="porcentaje" value="12 %" />
            </div>

            <div class="form-group">
                <label for="gasolina">Gasolina:</label>
                <input type="text" id="gasolina" name="gasolina" value="1200" />
            </div>

            <!-- Botón para agregar cliente -->
            <div class="action-buttons">
                <button type="submit" class="agregar-btn">
                    <span>Agregar Cliente</span>
                </button>
            </div>
        </form>
    </div>
</body>
<!-- Enlace a los archivos de estilos y scripts -->
<link rel="stylesheet" href="~/css/estilosCliente.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/funcionesCliente.js"></script>
