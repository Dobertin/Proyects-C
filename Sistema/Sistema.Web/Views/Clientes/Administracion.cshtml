@{
    ViewData["Title"] = "Administracion";
}
}
<link rel="stylesheet" href="~/css/clientes/administracion.css" />
<script src="~/js/clientes/administracion.js"></script>

<div class="container">
    <h2 class="text-center">Administración de clientes</h2>

    <div class="row mt-4">
        <!-- Sección Izquierda: Formulario -->
        <div class="col-md-5">
            <div class="mb-4 shadow p-3">
                <p style="font-size: 18px;" class="text-center fw-bold">Agregar nuevo cliente</p>
                <form>
                    <!-- Campo Nombre -->
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control border border-dark" id="nombre" placeholder="Nombre">
                    </div>
                    <!-- Campo Apellidos -->
                    <div class="mb-3">
                        <label for="apellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control border border-dark" id="apellidos" placeholder="Apellidos">
                    </div>
                    <!-- Campo Email y Teléfono -->
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control border border-dark" id="email" placeholder="Email">
                        </div>
                        <div class="col-6">
                            <label for="telefono" class="form-label"># Teléfono</label>
                            <input type="tel" class="form-control border border-dark" id="telefono" placeholder="Teléfono">
                        </div>
                    </div>

                    <!-- Campo Edad y Botón Agregar -->
                    <div class="mb-3 row">
                        <div class="col-6">
                            <label for="edad" class="form-label">Edad</label>
                            <input type="number" class="form-control border border-dark" id="edad" placeholder="Edad">
                        </div>
                        <div class="col-6 d-flex justify-content-center align-items-end">
                            <button type="submit" class="btn btn-success">Agregar</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <!-- Sección Derecha: Buscador y Tabla -->
        <div class="col-md-7">
            <!-- Buscador -->
            <div class="mb-4">
                <input type="text" class="form-control border border-dark" id="buscar" placeholder="Buscar...">
            </div>

            <!-- Tabla de Clientes -->
            <table class="table text-center">
                <thead style="background-color: #2b78c2; color: white;">
                    <tr>
                        <th scope="col">Nombre del responsable</th>
                        <th scope="col">Nombre del comercio</th>
                        <th scope="col">Numero de telefono</th>
                        <th scope="col">Direccion del comercio</th>
