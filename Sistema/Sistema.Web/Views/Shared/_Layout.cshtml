<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .sidebar {
            background-color: #f8f5e7; /* Amarillo claro */
            height: 100vh;
            position: fixed;
            width: 230px;
            padding-top: 20px;
            overflow-y: auto;
        }
        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
        }
        .sidebar-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        .content-wrapper {
            margin-left: 230px; /* Ancho del sidebar */
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="mb-2 mx-5" style="">
                <img src="~/img/iconoprincipal.png" alt="Logo" class="img-fluid" style="max-width: 60px;" />
            </div>
            <nav class="nav flex-column" style="padding:20px;">
                <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#users" role="button" aria-expanded="false" aria-controls="users">
                    <i class="bi bi-person-fill"></i> Usuarios
                </a>
                <div class="collapse" id="users">
                    <a class="nav-link ps-5" href="/Usuarios/Administracion">Administrador</a>
                </div>
                <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#productosSubmenu" role="button" aria-expanded="false" aria-controls="productosSubmenu">
                    <i class="bi bi-boxes"></i> Productos
                </a>
                <div class="collapse" id="productosSubmenu">
                    <a class="nav-link ps-5" href="/Productos/Inventarios">Inventarios</a>
                    <a class="nav-link ps-5" href="/Productos/Listado">Listado</a>
                </div>
                <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#clientesSubmenu" role="button" aria-expanded="false" aria-controls="clientesSubmenu">
                    <i class="bi bi-people-fill"></i>  Clientes
                </a>
                <div class="collapse" id="clientesSubmenu">
                    <a class="nav-link ps-5" href="/Clientes/Administracion">Administración</a>
                </div>
                <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#tiendasSubmenu" role="button" aria-expanded="false" aria-controls="tiendasSubmenu">
                    <i class="bi bi-bag-dash-fill"></i> Tiendas
                </a>
                <div class="collapse" id="tiendasSubmenu">
                    <a class="nav-link ps-5" href="/Tiendas/Ventas">Ventas</a>
                    <a class="nav-link ps-5" href="/Tiendas/Administracion">Administración</a>
                </div>
            </nav>
            <div class="sidebar-footer" style="padding:20px;">
                <a class="nav-link" href="/Cuenta/Login"><i class="bi bi-door-closed-fill"></i> Cerrar Sesión</a>
                <a class="nav-link" href="/Home/Ayuda"><i class="bi bi-question-circle-fill"></i> Ayuda</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content-wrapper">
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-white mb-3">
                    <div class="container-fluid">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav flex-grow ms-auto gap-4">
                                <!-- Clase ms-auto para alinear al lado derecho -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="#">Home</a>
                                </li>                             
                                <li class="nav-item">             
                                    <a class="nav-link text-dark" href="#">Usuarios</a>
                                </li>                            
                                <li class="nav-item">            
                                    <a class="nav-link text-dark" href="#">Productos</a>
                                </li>                             
                                <li class="nav-item">             
                                    <a class="nav-link text-dark" href="#">Clientes</a>
                                </li>                            
                                <li class="nav-item">             
                                    <a class="nav-link text-dark" href="#">Tiendas</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
